{
  "name": "@oncyber-scenes/contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "node": "hardhat node",
    "test": "npm run test:coverage",
    "test:unit": "hardhat test --logs",
    "test:coverage": "hardhat coverage",
    "test:coverage:check": "nyc check-coverage",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint \"**/*.{js,ts}\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js:fix": "eslint --fix \"**/*.{js,ts}\"",
    "lint:sol:fix": "solhint --fix contracts/**/*.sol",
    "prettier": "npm run prettier:js && npm run prettier:sol",
    "prettier:write": "npm run prettier:js:write && npm run prettier:sol:write",
    "prettier:js": "prettier --check .",
    "prettier:js:write": "prettier --write .",
    "prettier:sol": "prettier --check 'contracts/**/*.sol'",
    "prettier:sol:write": "prettier --write 'contracts/**/*.sol'",
    "fix:deps": "sed -i.bak 's/skipSupportsInterface: false,/skipSupportsInterface: true,/' ./node_modules/hardhat-deploy/dist/src/helpers.js",
    "deploy:localhost": "hardhat --network localhost deploy",
    "deploy:mumbai": "hardhat --network mumbai deploy",
    "deploy:mainnet": "hardhat --network mainnet deploy",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:ethereum": "hardhat --network ethereum deploy",
    "verify:rinkeby": "hardhat etherscan-verify --network rinkeby --solc-input",
    "verify:ethereum": "hardhat etherscan-verify --network ethereum --solc-input",
    "scripts:createDrop:rinkeby": "hardhat run scripts/createDrop.ts --network rinkeby",
    "scripts:mint:rinkeby": "hardhat run scripts/mint.ts --network rinkeby",
    "scripts:createDrop:localhost": "hardhat run scripts/createDrop.ts --network localhost",
    "scripts:mint:localhost": "hardhat run scripts/mint.ts --network localhost"
  },
  "author": "oncyber",
  "license": "MIT",
  "devDependencies": {
    "@biconomy/mexa": "^2.0.30",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "4.5.0",
    "@solidstate/contracts": "0.0.30",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "chai-ethers": "0.0.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.1",
    "hardhat": "^2.9.1",
    "hardhat-deploy": "^0.11.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "hardhat-typechain": "^0.3.5",
    "nyc": "^15.1.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^7.0.1",
    "typescript": "^4.6.2"
  },
  "nyc": {
    "cache": true,
    "extension": [
      ".sol"
    ],
    "temp-dir": "./coverage",
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
