{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "./lib/biconomy.d.ts",
    "hardhat.config.ts",
    "./lib",
    "./scripts",
    "./deploy",
    "./test",
    "typechain/**/*"
  ]
}
